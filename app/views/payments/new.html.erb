<div class="container">
  <h2>Payment</h2>

  <div class="card mb-3">
    <div class="card-body">
      <p>
        <strong>Item:</strong>
        <%= case @shopping_list_item.purchasable
            when Ingredient then @shopping_list_item.purchasable.name
            when Item then @shopping_list_item.purchasable.item_name
            when Recipe then @shopping_list_item.purchasable.title
            end %>
      </p>

      <p>
        <strong>Quantity:</strong>
        <%= @shopping_list_item.quantity %>
      </p>

      <p>
        <strong>Status:</strong>
        <span class="badge bg-warning">Pending</span>
      </p>
    </div>
  </div>

  <%= form_with model: [@shopping_list_item, @payment], local: true do |f| %>
    <%= f.submit "Proceed to Payment", class: "btn btn-success" %>
  <% end %>

  <%= link_to "Back to Shopping List",
      shopping_list_items_path,
      class: "btn btn-secondary mt-3" %>
</div>
