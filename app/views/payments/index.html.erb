<div class="payment-container" data-controller="payments">
  <div class="payment-header">
    <h1>ğŸ’³ Payment Tracker</h1>
  </div>

  <div data-payments-target="messages"></div>

  <div class="payment-summary">
    <div class="payment-summary-card total">
      <h5>Total Items</h5>
      <h2 data-payments-target="totalCount">0</h2>
    </div>
    <div class="payment-summary-card pending">
      <h5>Pending</h5>
      <h2 data-payments-target="pendingCount">0</h2>
    </div>
    <div class="payment-summary-card completed">
      <h5>Completed</h5>
      <h2 data-payments-target="completedCount">0</h2>
    </div>
  </div>

  <div class="payment-card mb-4">
    <div class="payment-card-header d-flex justify-content-between align-items-center">
      <h4>â³ Pending Payments</h4>
    </div>
    <div class="payment-card-body">
      <table class="payment-table">
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Type</th>
            <th>Added On</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody data-payments-target="pendingTableBody">
          </tbody>
      </table>
      <div data-payments-target="pendingEmptyState" class="payment-empty-state" style="display: none;">
        <p>ğŸ‰ No pending payments. Great job!</p>
      </div>
    </div>
  </div>

  <div class="payment-card">
    <div class="payment-card-header d-flex justify-content-between align-items-center">
      <h4>âœ… Completed Payments</h4>
      <button data-action="click->payments#clearCompleted" class="payment-btn payment-btn-warning">
        Clear Completed
      </button>
    </div>
    <div class="payment-card-body">
      <table class="payment-table">
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Type</th>
            <th>Completed On</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody data-payments-target="completedTableBody">
          </tbody>
      </table>
      <div data-payments-target="completedEmptyState" class="payment-empty-state" style="display: none;">
        <p>ğŸ“‹ No completed payments yet.</p>
      </div>
    </div>
  </div>
  

  <div class="mt-4">
    <%= link_to "â† Back to Shopping List", shopping_list_items_path, class: "payment-btn payment-btn-secondary" %>
  </div>
</div>