<div class="container">
  <h1>My Shopping List</h1>

  <!-- ADD ITEM FORM - Tab-Based Approach -->
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Add New Item</h5>
    </div>
    <div class="card-body">
      
      <!-- Tab Navigation -->
      <ul class="nav nav-tabs mb-3" role="tablist">
        <li class="nav-item" role="presentation">
          <%= link_to "Select Item", 
              shopping_list_items_path(add_tab: 'select_item'), 
              class: "nav-link #{params[:add_tab] == 'select_item' || params[:add_tab].blank? ? 'active' : ''}" %>
        </li>
        <li class="nav-item" role="presentation">
          <%= link_to "Select Ingredient", 
              shopping_list_items_path(add_tab: 'select_ingredient'), 
              class: "nav-link #{params[:add_tab] == 'select_ingredient' ? 'active' : ''}" %>
        </li>
        <li class="nav-item" role="presentation">
          <%= link_to "Manual Entry", 
              shopping_list_items_path(add_tab: 'manual'), 
              class: "nav-link #{params[:add_tab] == 'manual' ? 'active' : ''}" %>
        </li>
      </ul>

      <!-- Tab Content -->
      <% current_tab = params[:add_tab].presence || 'select_item' %>

      <!-- SELECT ITEM TAB -->
      <% if current_tab == 'select_item' %>
        <%= form_with model: ShoppingListItem.new, 
            url: shopping_list_items_path, 
            method: :post, 
            local: true,
            class: "row g-3" do |f| %>
          <%= f.hidden_field :item_type, value: 'existing_item' %>
          
          <div class="col-md-7">
            <%= f.label :item_id, "Select Item", class: "form-label" %>
            <%= f.select :item_id, 
                options_from_collection_for_select(@items, :id, :item_name),
                { include_blank: 'Choose an item...' },
                { class: "form-select", required: true } %>
          </div>

          <div class="col-md-3">
            <%= f.label :quantity, "Quantity", class: "form-label" %>
            <%= f.text_field :quantity, 
                value: "1",
                class: "form-control", 
                required: true %>
          </div>

          <div class="col-md-2 d-flex align-items-end">
            <%= f.submit "Add", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      <% end %>

      <!-- SELECT INGREDIENT TAB -->
      <% if current_tab == 'select_ingredient' %>
        <%= form_with model: ShoppingListItem.new, 
            url: shopping_list_items_path, 
            method: :post, 
            local: true,
            class: "row g-3" do |f| %>
          <%= f.hidden_field :item_type, value: 'existing_ingredient' %>
          
          <div class="col-md-7">
            <%= f.label :ingredient_id, "Select Ingredient", class: "form-label" %>
            <%= f.select :ingredient_id, 
                options_from_collection_for_select(@ingredients, :id, :name),
                { include_blank: 'Choose an ingredient...' },
                { class: "form-select", required: true } %>
          </div>

          <div class="col-md-3">
            <%= f.label :quantity, "Quantity", class: "form-label" %>
            <%= f.text_field :quantity, 
                value: "1",
                class: "form-control", 
                required: true %>
          </div>

          <div class="col-md-2 d-flex align-items-end">
            <%= f.submit "Add", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      <% end %>

      <!-- MANUAL ENTRY TAB -->
      <% if current_tab == 'manual' %>
        <%= form_with model: ShoppingListItem.new, 
            url: shopping_list_items_path, 
            method: :post, 
            local: true,
            class: "row g-3" do |f| %>
          
          <div class="col-md-4">
            <%= f.label :item_type, "Type", class: "form-label" %>
            <%= f.select :item_type, 
                [
                  ['Item', 'manual_item'],
                  ['Ingredient', 'manual_ingredient']
                ],
                {},
                { class: "form-select", required: true } %>
          </div>

          <div class="col-md-5">
            <%= f.label :manual_name, "Name", class: "form-label" %>
            <%= f.text_field :manual_name, 
                class: "form-control", 
                placeholder: "Enter item or ingredient name",
                required: true %>
          </div>

          <div class="col-md-2">
            <%= f.label :quantity, "Quantity", class: "form-label" %>
            <%= f.text_field :quantity, 
                value: "1",
                class: "form-control", 
                required: true %>
          </div>

          <div class="col-md-1 d-flex align-items-end">
            <%= f.submit "Add", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>

  <!-- SHOPPING LIST TABLE - Your existing code with minor fix -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Items to Purchase</h4>
      <div>
        <%= link_to "View Payments", payments_path, class: "btn btn-info btn-sm me-2" %>
        <%= button_to "Clear Purchased Items", 
            clear_purchased_shopping_list_items_path,
            method: :delete,
            class: "btn btn-warning btn-sm",
            form: { data: { turbo_confirm: "Remove all purchased items from the list?" } } %>
      </div>
    </div>
    <div class="card-body">
      <% if @shopping_list_items.any? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th style="width: 50px;">Done</th>
              <th>Item</th>
              <th>Quantity</th>
              <th>Type</th>
              <th style="width: 250px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @shopping_list_items.each do |item| %>
              <tr class="<%= 'table-secondary' if item.is_purchased %>">
                <td>
                  <%= form_with model: item, 
                      url: shopping_list_item_path(item), 
                      method: :patch, 
                      local: true do |f| %>
                    <%= f.hidden_field :quantity, value: item.quantity %>
                    <%= f.check_box :is_purchased, 
                        onchange: "this.form.submit()",
                        class: "form-check-input" %>
                  <% end %>
                </td>
                <td>
                  <% if item.is_purchased %>
                    <s>
                  <% end %>
                  
                  <%# Display name based on purchasable type %>
                  <% if item.purchasable.present? %>
                    <% if item.purchasable_type == "Recipe" %>
                      <%= item.purchasable.title %>
                    <% elsif item.purchasable_type == "Item" %>
                      <%= item.purchasable.item_name %>
                    <% elsif item.purchasable_type == "Ingredient" %>
                      <%= item.purchasable.name %>
                    <% end %>
                  <% else %>
                    <span class="text-danger">Unknown Item</span>
                  <% end %>
                  
                  <% if item.is_purchased %>
                    </s>
                  <% end %>
                  <% if item.payment.present? %>
                    <span class="badge bg-success ms-2">In Payments</span>
                  <% end %>
                </td>
                <td>
                  <%= form_with model: item, 
                      url: shopping_list_item_path(item), 
                      method: :patch, 
                      local: true,
                      class: "d-flex" do |f| %>
                    <%= f.hidden_field :is_purchased, value: item.is_purchased %>
                    <%= f.text_field :quantity, 
                        value: item.quantity,
                        class: "form-control form-control-sm me-2",
                        style: "width: 120px;" %>
                    <%= f.submit "Update", class: "btn btn-sm btn-outline-primary" %>
                  <% end %>
                </td>
                <td>
                  <span class="badge bg-<%= item.purchasable_type == 'Recipe' ? 'info' : item.purchasable_type == 'Item' ? 'primary' : 'secondary' %>">
                    <%= item.purchasable_type %>
                  </span>
                </td>
                <td>
                  <div class="d-flex gap-2">
                    <% if item.payment.present? %>
                      <span class="text-muted small">Already in payments</span>
                    <% else %>
                      <%= button_to "Add to Payment", 
                          payments_path(shopping_list_item_id: item.id),
                          method: :post,
                          class: "btn btn-sm btn-success",
                          form: { data: { turbo_confirm: "Add this item to payments?" } } %>
                    <% end %>
                    <%= button_to "Remove", 
                        shopping_list_item_path(item),
                        method: :delete,
                        class: "btn btn-sm btn-outline-danger",
                        form: { data: { turbo_confirm: "Remove this item?" } } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="mt-3">
          <p class="text-muted">
            <strong>Total Items:</strong> <%= @shopping_list_items.count %> | 
            <strong>Purchased:</strong> <%= @shopping_list_items.where(is_purchased: true).count %> | 
            <strong>Remaining:</strong> <%= @shopping_list_items.where(is_purchased: false).count %>
          </p>
        </div>
      <% else %>
        <div class="text-center py-5">
          <p class="text-muted">Your shopping list is empty.</p>
          <p>Add items using the form above or from your meal plans!</p>
          <%= link_to "View Meal Plans", meal_plans_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "â† Back to Meal Plans", meal_plans_path, class: "btn btn-secondary" %>
  </div>
</div>
