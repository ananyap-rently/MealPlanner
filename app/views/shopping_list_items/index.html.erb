<div class="container">
  <h1>My Shopping List</h1>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger"><%= alert %></div>
  <% end %>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Items to Purchase</h4>
      <div>
        <%= link_to "View Payments", payments_path, class: "btn btn-info btn-sm me-2" %>
        <%= button_to "Clear Purchased Items", 
            clear_purchased_shopping_list_items_path,
            method: :delete,
            class: "btn btn-warning btn-sm",
            form: { data: { turbo_confirm: "Remove all purchased items from the list?" } } %>
      </div>
    </div>
    <div class="card-body">
      <% if @shopping_list_items.any? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th style="width: 50px;">Done</th>
              <th>Item</th>
              <th>Quantity</th>
              <th>Type</th>
              <th style="width: 250px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @shopping_list_items.each do |item| %>
              <tr class="<%= 'table-secondary' if item.is_purchased %>">
                <td>
                  <%= form_with model: item, 
                      url: shopping_list_item_path(item), 
                      method: :patch, 
                      local: true do |f| %>
                    <%= f.hidden_field :quantity, value: item.quantity %>
                    <%= f.check_box :is_purchased, 
                        onchange: "this.form.submit()",
                        class: "form-check-input" %>
                  <% end %>
                </td>
                <td>
                  <% if item.is_purchased %>
                    <s>
                  <% end %>
                  <% if item.purchasable_type == "Recipe" %>
                    <%= item.purchasable.title %>
                  <% elsif item.purchasable_type == "Item" %>
                    <%= item.purchasable.item_name %>
                  <% elsif item.purchasable_type == "Ingredient" %>
                    <%= item.purchasable.name %>
                  <% end %>
                  <% if item.is_purchased %>
                    </s>
                  <% end %>
                  <% if item.payment.present? %>
                    <span class="badge bg-success ms-2">In Payments</span>
                  <% end %>
                </td>
                <td>
                  <%= form_with model: item, 
                      url: shopping_list_item_path(item), 
                      method: :patch, 
                      local: true,
                      class: "d-flex" do |f| %>
                    <%= f.hidden_field :is_purchased, value: item.is_purchased %>
                    <%= f.text_field :quantity, 
                        value: item.quantity,
                        class: "form-control form-control-sm me-2",
                        style: "width: 120px;" %>
                  <% end %>
                </td>
                <td>
                  <span class="badge bg-<%= item.purchasable_type == 'Recipe' ? 'info' : 'secondary' %>">
                    <%= item.purchasable_type %>
                  </span>
                </td>
                <td>
                  <% if item.payment.present? %>
                    <span class="text-muted small">Already in payments</span>
                  <% else %>
                    <%= button_to "Add to Payment", 
                        payments_path(shopping_list_item_id: item.id),
                        method: :post,
                        class: "btn btn-sm btn-success me-2",
                        form: { data: { turbo_confirm: "Add this item to payments?" } } %>
                  <% end %>
                  <%= button_to "Remove", 
                      shopping_list_item_path(item),
                      method: :delete,
                      class: "btn btn-sm btn-outline-danger",
                      form: { data: { turbo_confirm: "Remove this item?" } } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="mt-3">
          <p class="text-muted">
            <strong>Total Items:</strong> <%= @shopping_list_items.count %> | 
            <strong>Purchased:</strong> <%= @shopping_list_items.where(is_purchased: true).count %> | 
            <strong>Remaining:</strong> <%= @shopping_list_items.where(is_purchased: false).count %>
          </p>
        </div>
      <% else %>
        <div class="text-center py-5">
          <p class="text-muted">Your shopping list is empty.</p>
          <p>Add items from your meal plans to get started!</p>
          <%= link_to "View Meal Plans", meal_plans_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "â† Back to Meal Plans", meal_plans_path, class: "btn btn-secondary" %>
  </div>
</div>